{
  "compilerOptions": {
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "DOM"
    ],
    "module": "es2022",
    "target": "es2017",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "types": [
      "node",
      "mocha"
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "outDir": "./built"
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "./src/**/*",
    "src/types/custom.d.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}